package pl.quark;

import java.util.*;

class Oct 
{
	private double minx;
	private double miny;
	private double minz;
	
	private double maxx;
	private double maxy;
	private double maxz;
	
	private LinkedList<Integer> elIx = new LinkedList<Integer>();
	
	public Oct(double _minx, double _miny, double _minz, 
			double _maxx, double _maxy, double _maxz,
			int noOfElements)
	{
		minx = _minx;
		miny = _miny;
		minz = _minz;
		
		maxx = _maxx;
		maxy = _maxy;
		maxz = _maxz;
		
		for (int i = 0; i < noOfElements; ++i)
		{
			elIx.add(i);
		}
	}
	
	public int size()
	{
		return elIx.size();		
	}

	/**
	 * Rozdziela klaster na 8 innych. 
	 */
	public LinkedList<Oct> split(double[] x, double[] y, double[] z)
	{
		//Przygotowanie danych:
		LinkedList<Oct> children = new LinkedList<Oct>();
		
		double meanx = 0.5 * (maxx - minx);
		double meany = 0.5 * (maxy - miny);
		double meanz = 0.5 * (maxz - minz);
		
		/* f1 f2  b1 b2 
		 * f3 f4  b3 b4 */
		
		Oct f1 = new Oct();
		Oct f2 = new Oct();
		Oct f3 = new Oct();
		Oct f4 = new Oct();

		Oct b1 = new Oct();
		Oct b2 = new Oct();
		Oct b3 = new Oct();
		Oct b4 = new Oct();
		
		//Podzielenie elementów miêdzy dzieci
		for (Integer ix: elIx)
		{
			if (x[ix]<meanx)
			{
				if (y[ix]<meany)
				{
					if (z[ix]<meanz)
					{
						
					} else // z >= meanz
					{
						
					}
				} else //y >= meany
				{
					if (z[ix]<meanz)
					{
						
					} else // z >= meanz
					{
						
					}
				}
			} else  //x >= meanx
			{
				
			}
		}
		
		//Przygotowanie zwracanej listy
		children.add(f1);
		children.add(f2);
		children.add(f3);
		children.add(f4);
		children.add(b1);
		children.add(b2);
		children.add(b3);
		children.add(b4);
		
		return children;
	}
}
